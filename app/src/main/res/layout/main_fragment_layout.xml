<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/norm_border"
        android:layout_marginEnd="@dimen/norm_border"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/getCat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getCat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_tabs_height"
        android:layout_marginStart="@dimen/norm_border"
        android:layout_marginEnd="@dimen/norm_border"
        android:layout_weight="1"
        android:text="@string/get_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>